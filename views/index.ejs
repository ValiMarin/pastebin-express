<html>
  <head>
    <title>Pastebin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="App">
      <header>PASTEBIN</header>
      <form action="/paste/create" method="POST">
        <label>
          Add text:
          <input name="content" type="text" placeholder="your text here" required />
          </label>

       <button type="submit" class="btn btn-primary fs-3 fw-bold">
         PASTE
          </button>
</form>
   <div id="textsContainer" class="list rounded p-3">
  <% if (pastes && pastes.length > 0) { %>
    <% pastes.forEach(paste => { %>
      <div style="display:flex; align-items:center; gap:10px;">
        <p>
          <% if (paste.content.length > 20) { %>
            <%= paste.content.slice(0, 5) %>...
          <% } else { %>
            <%= paste.content %>
          <% } %>
        </p>
        <% if (paste.content.length > 20) { %>
          <a href="/paste/<%= paste.id %>" class="btn btn-primary ms-2">View full</a>
        <% } %>
      </div>
    <% }) %>
  <% } %>
</div>
    </div>
  </body>
</html>
